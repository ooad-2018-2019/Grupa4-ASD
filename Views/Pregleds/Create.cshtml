@model HospitalisOOAD.Models.Pregled

@{
    ViewData["Title"] = "Create";
}

<h2 style="height: 30px;"></h2>

<h4 align="center" style="background-color: #4ac5ce; font-size: xx-large;">PREGLED</h4>
<hr />
<div class="row">
    <div align="center" class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="background-color:#4ac5ce;" class="form-group">
                <label asp-for="termin" class="control-label"></label>
                <input asp-for="termin" class="form-control" />
                <span asp-validation-for="termin" class="text-danger"></span>
            </div>
            <div style="background-color:#4ac5ce;" class="form-group">
                <label asp-for="zauzet" class="control-label"></label>
                <select asp-for="zauzet" class="form-control"><option>dostupan</option></select>
            </div>
            <div style="background-color:#4ac5ce;" class="form-group">
                <label asp-for="KorisnikId" class="control-label"></label>
                <select asp-for="KorisnikId" class="form-control" 
                        asp-items="@(new SelectList(ViewBag.lista,"ID", "fullname"))"></select>
            </div>
            
            <div class="form-group">
                <input style="background-color:#4ac5ce;" type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Pogledajte preglede</a>
</div>

