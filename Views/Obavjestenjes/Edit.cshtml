@model HospitalisOOAD.Models.Obavjestenje

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "_Layout3";
}


<h2 style="height: 30px;"></h2>

<h4>Obavještenje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="tekst" class="control-label"></label>
                <input asp-for="tekst" class="form-control" />
                <span asp-validation-for="tekst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vrijemeObjave" class="control-label"></label>
                <input asp-for="vrijemeObjave" class="form-control" />
                <span asp-validation-for="vrijemeObjave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak u listu</a>
</div>

