@model HospitalisOOAD.Models.Obavjestenje

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "_Layout3";
}


<h2 style="height: 30px;"></h2>

<h4 align="center" style="background-color: #4ac5ce; font-size: xx-large;">OBAVJEŠTENJE</h4>
<hr />
<div class="row">
    <div align="center" class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="background-color:#4ac5ce;" class="form-group">
                <label asp-for="tekst" class="control-label"></label>
                <input asp-for="tekst" class="form-control" />
                <span asp-validation-for="tekst" class="text-danger"></span>
            </div>
            <div style="background-color:#4ac5ce;" class="form-group">
                <label asp-for="vrijemeObjave" class="control-label"></label>
                <input asp-for="vrijemeObjave" class="form-control" />
                <span asp-validation-for="vrijemeObjave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#4ac5ce;" type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Pogledajte obavještenja</a>
</div>
